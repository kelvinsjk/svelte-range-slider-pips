---
import AvatarList from './AvatarList.astro'
type Props = {
  path: string
}
const { path } = Astro.props
---

<footer>
  <AvatarList path={path} />
</footer>

<style>
  footer {
    margin-top: auto;
    padding: 2rem;
    border-top: 3px solid var(--theme-divider);
  }
  @media (max-width: 49.999em) {
    footer {
      padding: 2rem 2rem calc( var(--theme-navbar-height ) + 2rem);
    }
  }
</style>
